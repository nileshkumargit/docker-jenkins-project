PUSHING:

pipeline {
    agent any
    
    stages {
        stage('checkout') {
            steps {
                git 'https://github.com/nileshkumargit/docker-jenkins-project.git'
            }
        }
        stage('build') {
            steps {
                sh 'docker build -t $img ./'
            }
        }
        stage('tag') {
            steps {
                sh 'docker tag $img $repo'
            }
        }
        stage('push') {
            steps {
                sh 'docker login -u nileshkumar2343 -p $password'
                sh 'docker push $repo'
            }
        }
    }
}

DEPLOYMENT:

pipeline {
    agent any
    
    stages {
        stage('checkout') {
            steps {
                git 'https://github.com/nileshkumargit/docker-jenkins-project.git'
            }
        }
        stage('deploy') {
            steps {
                sh 'docker stack deploy -c docker-jenkins-project-compose.yml paytm'
            }
        }
    }
}
